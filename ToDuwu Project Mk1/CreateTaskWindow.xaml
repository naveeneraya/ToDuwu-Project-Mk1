<Window x:Class="ToDuwu_Project_Mk1.CreateTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDuwu_Project_Mk1"
        mc:Ignorable="d"
        Title="CreateTaskWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Task Name" HorizontalAlignment="Left" Margin="39,42,0,0" VerticalAlignment="Top"/>
        <TextBox Name="TaskName" HorizontalAlignment="Left" Margin="130,42,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="284" Height="26"/>
        <Label Content="Task Description" HorizontalAlignment="Left" Margin="39,109,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.22,0.68" Height="31" Width="99"/>
        <TextBox Name="TaskDescription" HorizontalAlignment="Left" Margin="39,145,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="688" Height="192"/>
        <Button Name="btnSubmit" Content="Submit" Click="btnSubmit_Click" HorizontalAlignment="Left" Margin="240,370,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.144,0.579" Height="33" Width="81"/>
        <Button Name="btnCancel" Content="Cancel" Click="btnCancel_Click" HorizontalAlignment="Left" Margin="400,370,0,0" VerticalAlignment="Top" Height="33" Width="91"/>

    </Grid>
</Window>
